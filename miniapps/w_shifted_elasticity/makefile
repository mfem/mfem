# Use the MFEM build directory
MFEM_DIR ?= ../..
MFEM_BUILD_DIR ?= ../..
SRC = $(if $(MFEM_DIR:../..=),$(MFEM_DIR)/miniapps/w_shifted_elasticity/,)
CONFIG_MK = $(MFEM_BUILD_DIR)/config/config.mk

# Include defaults.mk to get XLINKER
DEFAULTS_MK = $(MFEM_DIR)/config/defaults.mk
include $(DEFAULTS_MK)

MFEM_LIB_FILE = mfem_is_not_built
-include $(CONFIG_MK)

EX_LINEAR_ELASTICITY_WSBM_SRC = ex_Linear_Elasticity_refactored.cpp nitsche_weighted_solver.cpp volume_weighted_integrals.cpp  volume_fractions.cpp linear_elasticity_solver.cpp ghost_penalty.cpp shifted_weighted_solver.cpp dist_solver.cpp marking.cpp sbm_aux.cpp
EX_LINEAR_ELASTICITY_WSBM_OBJ = $(EX_LINEAR_ELASTICITY_WSBM_SRC:.cpp=.o)

PAR_MINIAPPS = ex_Linear_Elasticity_WSBM

ifeq ($(MFEM_USE_MPI),NO)
   MINIAPPS =
else
   MINIAPPS = $(PAR_MINIAPPS)
endif

COMMON_LIB = -L$(MFEM_BUILD_DIR)/miniapps/common -lmfem-common

# If MFEM_SHARED is set, add the ../common rpath
COMMON_LIB += $(if $(MFEM_SHARED:YES=),,\
   $(if $(MFEM_USE_CUDA:YES=),$(CXX_XLINKER),$(CUDA_XLINKER))-rpath,$(abspath\
   $(MFEM_BUILD_DIR)/miniapps/common))

.SUFFIXES:
.SUFFIXES: .o .cpp .mk
.PHONY: all lib-common clean clean-build clean-exec

# Remove built-in rule
%: %.cpp
%.o: %.cpp 

%.o: $(SRC)%.cpp $(wildcard $(SRC)%.hpp) $(MFEM_LIB_FILE) $(CONFIG_MK) | lib-common
	$(MFEM_CXX) $(MFEM_FLAGS) -c $< -o $@

all: $(MINIAPPS)

ex_Linear_Elasticity_WSBM: $(EX_LINEAR_ELASTICITY_WSBM_OBJ)
	$(MFEM_CXX) $(MFEM_LINK_FLAGS) -o $@ $(EX_LINEAR_ELASTICITY_WSBM_OBJ) $(COMMON_LIB) $(MFEM_LIBS)

# Rule for building lib-common
lib-common:
	$(MAKE) -C $(MFEM_BUILD_DIR)/miniapps/common

MFEM_TESTS = MINIAPPS
include $(MFEM_TEST_MK)

# Testing: Parallel vs. serial runs
RUN_MPI = $(MFEM_MPIEXEC) $(MFEM_MPIEXEC_NP) $(MFEM_MPI_NP)
TEST_NAME := Stokes miniapp
%-test-par: %
	@$(call mfem-test,$<, $(RUN_MPI), $(TEST_NAME))
%-test-seq: %
	@$(call mfem-test,$<,, $(TEST_NAME))

# Testing: "test" target and mfem-test* variables are defined in config/test.mk

# Generate an error message if the MFEM library is not built and exit
$(MFEM_LIB_FILE):
	$(error The MFEM library is not built)

clean: clean-build clean-exec

clean-build:
	rm -f *.o *~ ex_Linear_Elasticity_WSBM
	rm -rf *.dSYM *.TVD.*breakpoints

clean-exec:
	@rm -f ex_Linear_Elasticity_WSBM.mesh ex_Linear_Elasticity_WSBM.gf
